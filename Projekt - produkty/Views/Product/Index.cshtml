@model List<Projekt___produkty.Models.Product>

<div>
    <center>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Utwórz produkt</a>
    </center>
</div>
<br />
<h1>Lista produktów</h1>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ProductionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
        </tr>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @item.Name
                    </td>
                    <td>
                    @item.Price
                    </td>
                    <td>
                    @item.Manufacturer
                    </td>
                    <td>
                    @item.ProductionDate
                    </td>
                    <td>
                    @item.Description
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Edytuj</a>
                        <a class="btn btn-outline-info" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">Szczegóły</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Usuń</a>
                    </td>
                </tr>
        }
    </table>
</div>
