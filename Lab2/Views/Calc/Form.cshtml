<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Kalkulator</h2>
            <form action="Result" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="l1">Liczba 1</label>
                    <input class="form-control" type="number" name="l1" step="0.00001" id="l1" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="op">Operator</label>
                    <select class="form-control" name="op">
                        <option value="add">+</option>
                        <option value="sub">&minus;</option>
                        <option value="mul">&times;</option>
                        <option value="div">&divide;</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="l2">Liczba 2</label>
                    <input class="form-control" type="number" name="l2" step="0.00001" id="l2" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Oblicz</button>
                </div>
            </form>
        </div>
    </div>
</div>